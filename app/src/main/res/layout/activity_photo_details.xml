<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.photoDetails.PhotoDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivPhotoDetails"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:contentDescription="@string/desc_selected_photo"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/grp_details_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ivPhotoDetails">


                <RatingBar
                    android:id="@+id/rbPhotoDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPhotoTitle"
                    style="@style/CustomLabelBold"
                    android:layout_width="93dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/lb_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rbPhotoDetails" />

                <EditText
                    android:id="@+id/etPhotoTitle"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPhotoTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPhotoTitle" />

                <TextView
                    android:id="@+id/lblPhotoDate"
                    style="@style/CustomLabelBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/lb_photo_date"
                    app:layout_constraintStart_toStartOf="@+id/tvPhotoTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhotoTitle" />

                <TextView
                    android:id="@+id/tvPhotoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:width="200dp"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/lblPhotoDate"
                    app:layout_constraintEnd_toEndOf="@+id/etPhotoTitle"
                    app:layout_constraintStart_toStartOf="@+id/etPhotoTitle"
                    app:layout_constraintTop_toBottomOf="@+id/etPhotoTitle"
                    tools:text="10/02/20 3:26 PM" />

                <TextView
                    android:id="@+id/lb_photoSize"
                    style="@style/CustomLabelBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/lb_size"
                    app:layout_constraintStart_toStartOf="@+id/lblPhotoDate"
                    app:layout_constraintTop_toBottomOf="@+id/lblPhotoDate" />

                <TextView
                    android:id="@+id/tvPhotoSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvPhotoDate"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhotoDate"
                    tools:text="3.10 MB" />

                <TextView
                    android:id="@+id/lb_photo_dimensions"
                    style="@style/CustomLabelBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/lb_dimensions"
                    app:layout_constraintStart_toStartOf="@+id/lb_photoSize"
                    app:layout_constraintTop_toBottomOf="@+id/lb_photoSize" />

                <TextView
                    android:id="@+id/tvPhotoDimensions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="H:78 X W:80"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvPhotoSize"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhotoSize" />

                <TextView
                    android:id="@+id/lbFormat"
                    style="@style/CustomLabelBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/lb_format"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lb_photo_dimensions"
                    app:layout_constraintTop_toBottomOf="@+id/lb_photo_dimensions" />

                <TextView
                    android:id="@+id/tvPhotoFormat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="JPG"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvPhotoDimensions"
                    app:layout_constraintTop_toBottomOf="@+id/tvPhotoDimensions" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>